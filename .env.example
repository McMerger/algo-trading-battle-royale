# ============================================
# SignalOps Configuration
# ============================================

# ----------------
# Database Configuration
# ----------------
DATABASE_URL=postgresql://signalops:signalops_dev_password@localhost:5432/signalops
REDIS_URL=redis://localhost:6379

# ----------------
# Service URLs (for local development)
# ----------------
GO_EXECUTION_URL=http://localhost:8080
PYTHON_STRATEGY_URL=http://localhost:50051
JAVA_RISK_URL=http://localhost:50052

# ----------------
# AI/LLM Configuration
# ----------------
# Google Gemini API for explainability and post-trade analysis
# Get your free API key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ----------------
# Exchange API Keys
# ----------------
# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Coinbase Pro
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET_KEY=your_coinbase_secret_key_here

# Kraken
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET_KEY=your_kraken_secret_key_here

# ----------------
# Data Source API Keys
# ----------------
# DeFiLlama (no key required for most endpoints)
DEFILLAMA_API_KEY=

# Dune Analytics (for on-chain data)
DUNE_API_KEY=your_dune_api_key_here

# News APIs
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here
NEWSAPI_KEY=your_newsapi_key_here

# ----------------
# Trading Configuration
# ----------------
DEFAULT_SYMBOL=BTC
DEFAULT_CAPITAL=100000
MAX_POSITION_SIZE=0.05
MAX_DAILY_LOSS=0.02
RISK_FREE_RATE=0.04

# ----------------
# Feature Flags
# ----------------
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_BACKTESTING=true
ENABLE_GEMINI_EXPLANATIONS=false

# ----------------
# Logging & Monitoring
# ----------------
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true
SENTRY_DSN=

# ----------------
# AWS Configuration (for EKS deployment)
# ----------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=signalops-data
CLOUDWATCH_LOG_GROUP=/signalops/prod
